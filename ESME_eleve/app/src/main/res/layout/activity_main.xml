<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#D5D5D5"
    android:nestedScrollingEnabled="true"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewDate"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="10dp"
        android:text="Jour + Heure"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageLogoEsme"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="6dp"
        android:src="@drawable/esme_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewUser"
        android:layout_width="200dp"
        android:layout_height="38dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="36dp"
        android:text="Nom Utilisateur\nAdresse Mail Utilisateur"
        android:textAlignment="viewStart"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btDisconnect"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_marginTop="28dp"
        android:text="Se dÃ©connecter"
        android:textAlignment="viewEnd"
        android:textColor="#1A237E"
        android:textSize="12dp"
        app:iconPadding="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollViewAccueil"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:contentDescription="@string/welcome"
        android:nestedScrollingEnabled="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btDisconnect">

        <LinearLayout
            android:id="@+id/layoutAccueil"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:nestedScrollingEnabled="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageCalendar"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@android:drawable/ic_menu_my_calendar" />

            <TextView
                android:id="@+id/textViewDb"
                android:layout_width="match_parent"
                android:layout_height="122dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:text="Elements de la database"
                android:textColor="#000000" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/RecyclerViewNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" />

            <ImageView
                android:id="@+id/imageViewRandom1"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@android:drawable/ic_dialog_dialer" />

            <ImageView
                android:id="@+id/imageViewRandom2"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@android:drawable/ic_dialog_info" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>