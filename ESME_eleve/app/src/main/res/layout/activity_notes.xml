<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_esme_splash"
    tools:context=".NotesActivity">

    <TextView
        android:id="@+id/textViewDate2"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="10dp"
        android:text="Jour + Heure"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageLogoEsme2"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="6dp"
        android:src="@drawable/esme_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewUser2"
        android:layout_width="200dp"
        android:layout_height="38dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="36dp"
        android:text="Nom Utilisateur\nAdresse Mail Utilisateur"
        android:textAlignment="viewStart"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btDisconnect2"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_marginTop="28dp"
        android:text="Se déconnecter"
        android:textAlignment="viewEnd"
        android:textColor="#000000"
        android:textSize="12dp"
        app:iconPadding="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewTitreMatiere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="6dp"
        android:text="Matière"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageLogoEsme2" />

    <TextView
        android:id="@+id/textViewTitreIntitule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="6dp"
        android:text="Intitulé"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageLogoEsme2" />

    <TextView
        android:id="@+id/textViewTitreDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="6dp"
        android:text="Date"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/textViewTitreIntitule"
        app:layout_constraintTop_toBottomOf="@id/imageLogoEsme2" />

    <TextView
        android:id="@+id/textViewTitreNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="6dp"
        android:text="Note"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/textViewTitreDate"
        app:layout_constraintTop_toBottomOf="@id/imageLogoEsme2" />

    <TextView
        android:id="@+id/textViewTitreCoeff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="6dp"
        android:text="Coeff"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@+id/textViewTitreNote"
        app:layout_constraintTop_toBottomOf="@id/imageLogoEsme2" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:background="#000000"
        android:rotation="90"
        android:rotationX="0"
        android:scaleY="7"
        android:src="@android:drawable/status_bar_item_app_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewNotes2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#BEE6F2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitreMatiere">

    </androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/btRetourNotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:backgroundTint="#C1FFFFFF"
        android:text="Retour"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>